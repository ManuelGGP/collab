{
  "name": "basic-code-helper",
  "displayName": "basic-code-helper",
  "description": "A VS Code extension to explain code using OpenAI Assistant",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.92.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:basic-code-helper.showSelectedCode",
    "onLanguage:*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "basic-code-helper.showSelectedCode",
        "title": "Explain Selected Code"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "basic-code-helper.showSelectedCode",
          "when": "editorHasSelection",
          "group": "navigation"
        }
      ]
    },
    "languages": [
      {
        "id": "*",
        "aliases": [
          "All Files"
        ],
        "extensions": [
          "*"
        ]
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test",
    "postinstall": "node ./node_modules/vscode/bin/install"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.7",
    "@types/vscode": "^1.92.0",
    "eslint": "^8.57.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4"
  },
  "dependencies": {
    "openai": "^4.57.3"
  }
}
